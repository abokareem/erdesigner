{
    "appId": "com.electron.er-designer",
    "copyright": "Copyright Â© 2017 Filip Vitas",
    "compression": "maximum",
    "files": [
      "app/",
      "node_modules/",
      "main.js",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 400,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "mac": {
      "artifactName": "${name}-${env.ENV_NAME}-${arch}.${ext}",
      "asar": true,
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["deb", "AppImage"],
      "executableName": "${name}-${env.ENV_NAME}-${arch}.${ext}",
      "description": "An open-source ER Diagram tool that is available for ALL platforms.",
      "synopsis": "An open-source ER Diagram tool that is available for ALL platforms.",
      "maintainer": "Filip Vitas <vitasfilip90@gmail.com>",
      "category": "Graphics",
      "packageCategory": "graphics"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "artifactName": "${name}-${env.ENV_NAME}-setup-${arch}.${ext}"
    },
    "portable": {
      "artifactName": "${name}-${env.ENV_NAME}-portable-${arch}.${ext}"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  }