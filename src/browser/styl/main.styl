.node-resize
  .top
    top: -3px
  .bottom
    bottom: -3px
  .left
    left: -3px
  .right
    right: -3px

  .bottom.left
    transform: rotate(0deg)
    cursor: nesw-resize
  .top.left
    transform: rotate(90deg)
    cursor: nwse-resize
  .top.right
    transform: rotate(180deg)
    cursor: nesw-resize
  .bottom.right
    transform: rotate(270deg)
    cursor: nwse-resize

  svg
    position: absolute
    z-index: 100

    path
      fill: #ffffff
      stroke: #222222
      stroke-width: 1
